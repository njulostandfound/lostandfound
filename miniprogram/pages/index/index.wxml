<!--index.wxml-->
<view class="container">

  <!-- 用户 openid -->
  <view class="userinfo">
    <button 
      open-type="getUserInfo" 
      bindgetuserinfo="onGetUserInfo"
      class="userinfo-avatar"
      style="background-image: url({{avatarUrl}})"
    ></button>
    <view>
      <button class="userinfo-nickname" bindtap="onGetOpenid">点击获取 openid</button>
    </view>
  </view>

  <view class="uploader">
    <navigator url="../submit/index" open-type="navigate" class="uploader-text">
      <text>发布信息</text>
    </navigator>
  </view>

  <view class="uploader">
    <navigator url="../search/index" open-type="navigate" class="uploader-text">
      <text>查找信息</text>
    </navigator>
  </view>

</view>
